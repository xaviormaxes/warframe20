<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WarframeApp20" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/void</item>
        <item name="colorOnSecondary">@color/text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text</item>
        <!-- Text colors -->
        <item name="colorOnBackground">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text</item>
    </style>

    <style name="Theme.WarframeApp20.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WarframeApp20.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WarframeApp20.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
