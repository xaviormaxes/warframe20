<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.WarframeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Global attributes -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorBackground</item>
        <item name="colorPrimary">@color/warframe_blue</item>
        <item name="colorPrimaryVariant">@color/warframe_blue_dark</item>
        <item name="colorSecondary">@color/warframe_energy</item>
        <item name="colorSecondaryVariant">@color/warframe_energy_bright</item>
        <item name="colorSurface">@color/warframe_surface</item>
        <item name="colorOnSurface">@color/warframe_text</item>
        <item name="colorBackground">@color/warframe_background</item>
        <item name="colorOnBackground">@color/warframe_text</item>
        <item name="colorError">@color/warframe_error</item>
        <item name="android:textColorPrimary">@color/warframe_text</item>
        <item name="android:textColorSecondary">@color/warframe_text_secondary</item>
    </style>

    <!-- Rhino Prime Theme -->
    <style name="Theme.WarframeApp.RhinoPrime" parent="Theme.WarframeApp">
        <item name="colorPrimary">@color/rhino_primary</item>
        <item name="colorPrimaryVariant">@color/rhino_primary_dark</item>
        <item name="colorSecondary">@color/rhino_accent</item>
        <item name="colorSecondaryVariant">@color/rhino_accent_bright</item>
        <item name="colorBackground">@color/rhino_background</item>
        <item name="colorSurface">@color/rhino_surface</item>
    </style>

    <!-- Excalibur Umbra Theme -->
    <style name="Theme.WarframeApp.ExcaliburUmbra" parent="Theme.WarframeApp">
        <item name="colorPrimary">@color/umbra_primary</item>
        <item name="colorPrimaryVariant">@color/umbra_primary_dark</item>
        <item name="colorSecondary">@color/umbra_accent</item>
        <item name="colorSecondaryVariant">@color/umbra_accent_bright</item>
        <item name="colorBackground">@color/umbra_background</item>
        <item name="colorSurface">@color/umbra_surface</item>
    </style>

    <!-- Wisp Theme -->
    <style name="Theme.WarframeApp.Wisp" parent="Theme.WarframeApp">
        <item name="colorPrimary">@color/wisp_primary</item>
        <item name="colorPrimaryVariant">@color/wisp_primary_dark</item>
        <item name="colorSecondary">@color/wisp_accent</item>
        <item name="colorSecondaryVariant">@color/wisp_accent_bright</item>
        <item name="colorBackground">@color/wisp_background</item>
        <item name="colorSurface">@color/wisp_surface</item>
    </style>

    <!-- Mesa Prime Theme -->
    <style name="Theme.WarframeApp.MesaPrime" parent="Theme.WarframeApp">
        <item name="colorPrimary">@color/mesa_primary</item>
        <item name="colorPrimaryVariant">@color/mesa_primary_dark</item>
        <item name="colorSecondary">@color/mesa_accent</item>
        <item name="colorSecondaryVariant">@color/mesa_accent_bright</item>
        <item name="colorBackground">@color/mesa_background</item>
        <item name="colorSurface">@color/mesa_surface</item>
    </style>

    <!-- Saryn Prime Theme -->
    <style name="Theme.WarframeApp.SarynPrime" parent="Theme.WarframeApp">
        <item name="colorPrimary">@color/saryn_primary</item>
        <item name="colorPrimaryVariant">@color/saryn_primary_dark</item>
        <item name="colorSecondary">@color/saryn_accent</item>
        <item name="colorSecondaryVariant">@color/saryn_accent_bright</item>
        <item name="colorBackground">@color/saryn_background</item>
        <item name="colorSurface">@color/saryn_surface</item>
    </style>

    <!-- Nova Prime Theme -->
    <style name="Theme.WarframeApp.NovaPrime" parent="Theme.WarframeApp">
        <item name="colorPrimary">@color/nova_primary</item>
        <item name="colorPrimaryVariant">@color/nova_primary_dark</item>
        <item name="colorSecondary">@color/nova_accent</item>
        <item name="colorSecondaryVariant">@color/nova_accent_bright</item>
        <item name="colorBackground">@color/nova_background</item>
        <item name="colorSurface">@color/nova_surface</item>
    </style>

    <!-- Frost Prime Theme -->
    <style name="Theme.WarframeApp.FrostPrime" parent="Theme.WarframeApp">
        <item name="colorPrimary">@color/frost_primary</item>
        <item name="colorPrimaryVariant">@color/frost_primary_dark</item>
        <item name="colorSecondary">@color/frost_accent</item>
        <item name="colorSecondaryVariant">@color/frost_accent_bright</item>
        <item name="colorBackground">@color/frost_background</item>
        <item name="colorSurface">@color/frost_surface</item>
    </style>

    <!-- Styles for widgets -->
    <style name="WarframeCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="WarframeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="WarframeText.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WarframeText.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WarframeText.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WarframeText.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Legacy theme references -->
    <style name="Theme.WarframeApp20" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.WarframeApp20.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WarframeApp20.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WarframeApp20.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>