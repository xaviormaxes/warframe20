<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    style="@style/WarframeCardView"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/image_warframe"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_warframe_24dp"
            android:contentDescription="@string/warframe_desc"
            app:tint="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_prime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prime_label"
            android:textSize="10sp"
            android:visibility="gone"
            app:chipBackgroundColor="?attr/colorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_warframe_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toStartOf="@+id/chip_prime"
            app:layout_constraintStart_toEndOf="@+id/image_warframe"
            app:layout_constraintTop_toTopOf="@+id/image_warframe"
            tools:text="Excalibur" />

        <TextView
            android:id="@+id/text_mastery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="12sp"
            android:textColor="?attr/android:textColorSecondary"
            app:layout_constraintStart_toEndOf="@+id/image_warframe"
            app:layout_constraintTop_toBottomOf="@+id/text_warframe_name"
            tools:text="MR 0" />

        <TextView
            android:id="@+id/text_warframe_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="?attr/android:textColorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_warframe"
            tools:text="A master of blade and gun, balanced for all Tenno." />

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_warframe_description">

            <!-- Health -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_shield_24dp"
                    android:contentDescription="@string/health_desc"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/text_health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="?attr/android:textColorSecondary"
                    tools:text="100" />

            </LinearLayout>

            <!-- Shield -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_shield_24dp"
                    android:contentDescription="@string/shield_desc"
                    app:tint="?attr/colorSecondary" />

                <TextView
                    android:id="@+id/text_shield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="?attr/android:textColorSecondary"
                    tools:text="100" />

            </LinearLayout>

            <!-- Armor -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_shield_24dp"
                    android:contentDescription="@string/armor_desc"
                    app:tint="?attr/android:textColorSecondary" />

                <TextView
                    android:id="@+id/text_armor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="?attr/android:textColorSecondary"
                    tools:text="225" />

            </LinearLayout>

            <!-- Energy -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_warframe_24dp"
                    android:contentDescription="@string/energy_desc"
                    app:tint="?attr/colorSecondary" />

                <TextView
                    android:id="@+id/text_energy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="?attr/android:textColorSecondary"
                    tools:text="100" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>